    "@vue/tsconfig": "^0.1.3",
    "eslint": "^8.18.0",
    "eslint-plugin-vue": "^9.1.1",
    "happy-dom": "^6.0.0",
    "jsdom": "^20.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "sass": "^1.52.3",
    "typescript": "~4.7.4",
    "vee-validate": "^4.6.1",
    "@vee-validate/rules": "^4.6.1",
    "vite": "^2.9.12",
    "vitest": "^0.15.1",
    "vue-i18n": "^9.1.10",
    "vue-tsc": "^0.38.1"
  }
