    "vue-i18n": "^9.1.10",
    "@vueuse/core": "^8.9.3"
  },
  "devDependencies": {
    "@vueuse/core": "^8.9.3",
    "np": "^7.6.1",
    "@fortawesome/vue-fontawesome": "^3.0.1",
